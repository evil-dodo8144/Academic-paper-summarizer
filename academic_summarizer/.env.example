# Copy to .env.local and set your values.

DEBUG=True
SECRET_KEY=django-insecure-change-me
ALLOWED_HOSTS=127.0.0.1,localhost
DATABASE_URL=sqlite:///db.sqlite3

# Chat LLM provider: groq | openai | scaledown
LLM_PROVIDER=groq
LLM_MODEL=llama-3.3-70b-versatile

# Groq (OpenAI-compatible API surface)
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_API_KEY=your_groq_key_here

# OpenAI (optional)
# OPENAI_BASE_URL=https://api.openai.com/v1
# OPENAI_API_KEY=sk-your_openai_key_here

# ScaleDown chat (optional)
# SCALEDOWN_BASE_URL=https://api.scaledown.xyz/v1
# SCALEDOWN_API_KEY=your_scaledown_key_here
# SCALEDOWN_USE_X_API_KEY=false

# Optional: ScaleDown compress API (for chunk compression). Uses x-api-key.
SCALEDOWN_COMPRESS_URL=https://api.scaledown.xyz/compress/raw/
# SCALEDOWN_API_KEY=your_scaledown_compress_key_here
